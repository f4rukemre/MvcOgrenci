
@{
    ViewBag.Title = "HesapMakinesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Sayfanın genel stili */
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center; /* Yatayda ortalama */
            align-items: center; /* Dikeyde ortalama */
        }

        .calculator-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 350px;
            text-align: center;
        }

            .calculator-container h2 {
                margin-bottom: 20px;
                color: #343a40;
            }

        .form-group label {
            font-weight: bold;
            font-size: 16px;
        }

        .form-control {
            font-size: 18px;
            padding: 10px;
            margin: 10px 0;
        }

        .btn-warning {
            width: 100%;
            padding: 12px;
            font-size: 18px;
            font-weight: bold;
            background-color: #ffcc00;
            border-color: #ffcc00;
        }

            .btn-warning:hover {
                background-color: #e6b800;
                border-color: #e6b800;
            }

        .result-container {
            margin-top: 20px;
            font-size: 18px;
            font-weight: bold;
            color: #495057;
        }

            .result-container span {
                color: #007bff;
            }
    </style>
</head>
<body>
    <div class="calculator-container">
        <h2>Hesap Makinesi</h2>
        <form method="post">
            <div class="form-group">
                <label for="sayi1">Sayı 1:</label>
                <input type="number" name="sayi1" id="sayi1" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="sayi2">Sayı 2:</label>
                <input type="number" name="sayi2" id="sayi2" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-warning">Hesapla</button>
        </form>

        @if (ViewBag.toplam != null)
        {
            <div class="result-container">
                <p><strong>Toplam:</strong> <span>@ViewBag.toplam</span></p>
                <p><strong>Fark:</strong> <span>@ViewBag.fark</span></p>
                <p><strong>Çarpım:</strong> <span>@ViewBag.çarpım</span></p>
                <p><strong>Bölüm:</strong> <span>@ViewBag.bölüm</span></p>
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
