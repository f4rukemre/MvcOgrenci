@model OgrenciNotMvc.Models.TBLOGRENCILER
@{
    ViewBag.Title = "ÖğrenciGüncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2 class="text-center mb-4">Öğrenci Yönetimi</h2>
<div class="container panel-container">
    <form method="post">
        <div class="form-group">
            @Html.HiddenFor(x => x.OGRID)
            <label for="ogrenciAd" class="font-weight-bold">Öğrenci Adı</label>
            @Html.TextBoxFor(x => x.OGRAD, new { @class = "form-control", @id = "ogrenciAd", @placeholder = "Öğrenci adı giriniz" })
            <label for="ogrenciSoyad" class="font-weight-bold">Soyadı</label>
            @Html.TextBoxFor(x => x.OGRSOYAD, new { @class = "form-control", @id = "ogrenciSoyad", @placeholder = "Öğrenci soyadı giriniz" })
            <label for="ogrencıFoto" class="font-weight-bold">Fotoğraf</label>
            @Html.TextBoxFor(x => x.OGRFOTO, new { @class = "form-control", @id = "ogrencıFoto", @placeholder = "Fotoğraf URL" })
            <label for="ogrencıCınsıyet" class="font-weight-bold">Cinsiyet</label>
            @Html.DropDownListFor(x => x.OGRCINSIYET, new SelectList(new[] { "Erkek", "Kız" }), new { @class = "form-control", @id = "ogrencıCınsıyet" })
            <label for="ogrencıKulüp" class="font-weight-bold">Kulüp</label>
            @Html.TextBoxFor(x => x.OGRKULUP, new { @class = "form-control", @id = "ogrencıKulüp", @placeholder = "Kulübünü giriniz" })
        </div>
        <div class="mt-3 text-right">
            <button type="submit" class="btn btn-info px-4 py-2">
                <i class="fas fa-sync-alt"></i> Kaydet
            </button>
        </div>
    </form>
</div>


<style>
    .panel-title {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
        color: #343a40;
    }

    .panel-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 25px;
        border: 1px solid #ced4da;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f8f9fa;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: 600;
        color: #495057;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ced4da;
        border-radius: 5px;
    }

    .save-button {
        width: 100%;
        padding: 12px;
        font-size: 18px;
        font-weight: bold;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .save-button:hover {
            background-color: #0056b3;
        }
</style>

